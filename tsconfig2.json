{
    "compilerOptions": {
        "outDir": "lib",
        "sourceMap": true,
        "rootDir": "src",
        "noImplicitAny": false,
        "target": "ES2023",
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "lib",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "preserveConstEnums": true,
        "allowSyntheticDefaultImports": true,
        "pretty": true,
        "noEmitOnError": true,
        "removeComments": false,
        "skipLibCheck": true
    },
    "include": ["src"]
}
